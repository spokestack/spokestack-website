{
  "name": "spokestack-website",
  "private": true,
  "description": "Voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "1.18.0",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "npm run clean && gatsby build",
    "clean": "gatsby clean",
    "commit": "git-cz",
    "deploy": "gatsby build && gh-pages -d public -b master",
    "eslint": "eslint .",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "graphiql": "serve -l 5000 graphiql/",
    "lint": "concurrently --raw \"npm run type-check\" \"npm run eslint\" \"npm run prettier\"",
    "lint:fix": "concurrently --raw \"npm run type-check\" \"lint-staged\"",
    "post": "node tasks/post.js",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "release": "semantic-release",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "schema:remote": "node tasks/schema.js",
    "serve": "serve -l 8000 public/",
    "start": "npm run clean && concurrently \"gatsby develop\" \"npm run graphiql\"",
    "test": "npm run lint",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@emotion/core": "^10.0.28",
    "@loadable/component": "^5.12.0",
    "@reach/router": "^1.3.3",
    "apollo-absinthe-upload-link": "^1.5.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "color": "^3.1.2",
    "gatsby": "^2.22.10",
    "gatsby-image": "^2.4.4",
    "gatsby-link": "^2.4.2",
    "gatsby-plugin-canonical-urls": "^2.3.4",
    "gatsby-plugin-create-client-paths": "^2.3.0",
    "gatsby-plugin-emotion": "^4.3.0",
    "gatsby-plugin-feed": "^2.5.0",
    "gatsby-plugin-google-analytics": "^2.3.0",
    "gatsby-plugin-manifest": "^2.4.4",
    "gatsby-plugin-offline": "^3.2.2",
    "gatsby-plugin-optimize-svgs": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.3.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.6.3",
    "gatsby-plugin-typescript": "^2.4.0",
    "gatsby-plugin-typography": "^2.5.0",
    "gatsby-react-router-scroll": "^3.0.0",
    "gatsby-remark-copy-linked-files": "^2.3.1",
    "gatsby-remark-images": "^3.3.3",
    "gatsby-remark-prismjs": "^3.5.0",
    "gatsby-remark-responsive-iframe": "^2.4.1",
    "gatsby-remark-smartypants": "^2.3.0",
    "gatsby-source-filesystem": "^2.3.3",
    "gatsby-source-graphql": "^2.5.0",
    "gatsby-transformer-remark": "^2.8.8",
    "gatsby-transformer-sharp": "^2.5.0",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "intersection-observer": "^0.10.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-typography": "^0.16.19",
    "title-case": "^3.0.2",
    "typescript": "^3.9.2",
    "typography": "^0.16.19",
    "typography-breakpoint-constants": "^0.16.19",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "^8.1.0",
    "@graphql-codegen/cli": "^1.13.5",
    "@graphql-codegen/typescript": "^1.13.5",
    "@graphql-inspector/cli": "^2.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/color": "^3.0.0",
    "@types/loadable__component": "^5.10.0",
    "@types/lodash": "^4.14.151",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^0.4.2",
    "commitizen": "^4.0.5",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "gatsby-plugin-remove-trailing-slashes": "^2.3.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "mkdirp": "^1.0.4",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "serve": "^11.3.0",
    "shelljs": "^0.8.4"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack-website/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack-website#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack-website.git"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "env FORCE_COLOR=1 npm run lint:fix"
    }
  },
  "release": {
    "branches": [
      "develop"
    ],
    "ci": false,
    "npmPublish": false,
    "pre-commit": "npm run lint:fix",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix ."
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
