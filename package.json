{
  "name": "spokestack-website",
  "private": true,
  "description": "Mobile voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "1.2.3",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "yarn clean && gatsby build",
    "clean": "gatsby clean",
    "commit": "git-cz",
    "deploy": "gatsby build && gh-pages -d public -b master",
    "eslint": "eslint .",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "lint": "concurrently --raw \"yarn type-check\" \"yarn eslint\" \"yarn prettier\"",
    "lint:fix": "concurrently --raw \"yarn type-check\" \"lint-staged\"",
    "post": "node tasks/post.js",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "release": "semantic-release",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "schema:remote": "node tasks/schema.js",
    "serve": "gatsby serve",
    "start": "yarn clean && gatsby develop",
    "test": "yarn lint",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@emotion/core": "^10.0.14",
    "apollo-boost": "^0.4.7",
    "color": "^3.1.2",
    "gatsby": "^2.13.41",
    "gatsby-image": "^2.2.32",
    "gatsby-plugin-create-client-paths": "^2.1.20",
    "gatsby-plugin-emotion": "^4.1.2",
    "gatsby-plugin-feed": "^2.3.5",
    "gatsby-plugin-google-analytics": "^2.1.4",
    "gatsby-plugin-manifest": "^2.2.4",
    "gatsby-plugin-offline": "^3.0.17",
    "gatsby-plugin-optimize-svgs": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.1.2",
    "gatsby-plugin-sharp": "^2.2.9",
    "gatsby-plugin-svg-sprite": "^2.0.1",
    "gatsby-plugin-typescript": "^2.1.2",
    "gatsby-plugin-typography": "^2.3.2",
    "gatsby-remark-copy-linked-files": "^2.1.3",
    "gatsby-remark-images": "^3.1.7",
    "gatsby-remark-prismjs": "^3.3.3",
    "gatsby-remark-responsive-iframe": "^2.2.4",
    "gatsby-remark-smartypants": "^2.1.2",
    "gatsby-source-filesystem": "^2.1.6",
    "gatsby-source-graphql": "^2.1.29",
    "gatsby-transformer-remark": "^2.6.9",
    "gatsby-transformer-sharp": "^2.2.4",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "intersection-observer": "^0.7.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "prismjs": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-typography": "^0.16.19",
    "typescript": "^3.5.3",
    "typography": "^0.16.19",
    "typography-breakpoint-constants": "^0.16.19",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "^8.1.0",
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/typescript": "^1.4.0",
    "@semantic-release/git": "^8.0.0",
    "@types/color": "^3.0.0",
    "@types/lodash": "^4.14.149",
    "@types/react-helmet": "^5.0.8",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^0.2.23",
    "commitizen": "^4.0.3",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "graphql-cli": "^3.0.14",
    "husky": "^4.0.6",
    "lint-staged": "^10.0.1",
    "mkdirp": "^1.0.0",
    "prettier": "^1.18.2",
    "semantic-release": "^16.0.0",
    "shelljs": "^0.8.3"
  },
  "resolutions": {
    "lodash": ">=4.17.15",
    "vfile-message": ">=2.0.2"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack-website/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack-website#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack-website.git"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "env FORCE_COLOR=1 yarn lint:fix"
    }
  },
  "release": {
    "branches": [
      "develop"
    ],
    "ci": false,
    "npmPublish": false,
    "pre-commit": "yarn lint:fix",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix ."
    ]
  }
}
