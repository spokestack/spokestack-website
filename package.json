{
  "name": "spokestack.io",
  "private": true,
  "description": "Voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "2.1.0",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "deploy": "gatsby-plugin-s3 deploy --yes",
    "format": "eslint . --fix && prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.md\"",
    "lint": "concurrently --raw \"eslint .\" \"npm run prettier\" \"npm run typescript\"",
    "post": "node tasks/post.js",
    "prepare": "husky install",
    "prettier": "prettier --check \"**/*.json\" \"**/*.md\"",
    "release": "release-it",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "serve": "serve -l 8000 public/",
    "start": "gatsby develop --host=0.0.0.0",
    "test": "npm run lint",
    "typescript": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@loadable/component": "^5.14.1",
    "@reach/router": "^1.3.4",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-http-common": "^0.2.16",
    "babel-plugin-graphql-tag": "^3.2.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^1.2.0",
    "color": "^3.1.3",
    "cookie": "^0.4.1",
    "gatsby": "^3.2.1",
    "gatsby-link": "^3.2.0",
    "gatsby-plugin-canonical-urls": "^3.2.0",
    "gatsby-plugin-create-client-paths": "^3.2.0",
    "gatsby-plugin-emotion": "^6.2.0",
    "gatsby-plugin-feed": "^3.2.0",
    "gatsby-plugin-google-analytics": "^3.2.0",
    "gatsby-plugin-google-tagmanager": "^3.2.0",
    "gatsby-plugin-image": "^1.2.0",
    "gatsby-plugin-manifest": "^3.2.0",
    "gatsby-plugin-offline": "^4.2.0",
    "gatsby-plugin-optimize-svgs": "^1.0.5",
    "gatsby-plugin-react-helmet": "^4.2.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-remove-trailing-slashes": "^3.2.0",
    "gatsby-plugin-s3": "^0.3.8",
    "gatsby-plugin-sharp": "^3.2.0",
    "gatsby-plugin-sitemap": "^3.2.0",
    "gatsby-plugin-twitter": "^3.2.0",
    "gatsby-plugin-typescript": "^3.2.0",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-react-router-scroll": "^4.2.0",
    "gatsby-remark-autolink-headers": "^3.2.0",
    "gatsby-remark-check-links": "^2.1.0",
    "gatsby-remark-copy-linked-files": "^3.2.0",
    "gatsby-remark-embed-video": "^3.1.1",
    "gatsby-remark-embedder": "^4.1.0",
    "gatsby-remark-find-replace": "^0.3.0",
    "gatsby-remark-images": "^4.2.0",
    "gatsby-remark-prismjs": "^4.2.0",
    "gatsby-remark-responsive-iframe": "^3.2.0",
    "gatsby-remark-smartypants": "^3.2.0",
    "gatsby-source-filesystem": "^3.2.0",
    "gatsby-source-graphql": "^3.2.0",
    "gatsby-transformer-remark": "^3.2.0",
    "gatsby-transformer-sharp": "^3.2.0",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "intersection-observer": "^0.12.0",
    "isomorphic-unfetch": "^3.1.0",
    "lodash": "^4.17.21",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "title-case": "^3.0.3",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2",
    "wav-encoder": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.21.1",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/codemirror": "0.0.108",
    "@types/color": "^3.0.0",
    "@types/cookie": "^0.4.0",
    "@types/loadable__component": "^5.13.3",
    "@types/lodash": "^4.14.168",
    "@types/node-fetch": "^2.5.9",
    "@types/react-dom": "^17.0.3",
    "@types/react-helmet": "^6.1.0",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^8.3.0",
    "@types/wav-encoder": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "husky": "^6.0.0",
    "mkdirp": "^1.0.4",
    "open": "^8.0.5",
    "prettier": "^2.2.1",
    "release-it": "^14.5.1",
    "serve": "^11.3.2",
    "shelljs": "^0.8.4"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack.io/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack.io#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack.io.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "ga": "readonly"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    ".cache/",
    "public/",
    "src/utils/graphql.d.ts",
    "types/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "verbose": 2,
    "hooks": {
      "before:init": "npm test"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "requireBranch": "develop",
      "tagName": "${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "tokenRef": "SPOKESTACK_GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
