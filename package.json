{
  "name": "spokestack-website",
  "private": true,
  "description": "Mobile voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "1.7.4",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "npm run clean && gatsby build",
    "clean": "gatsby clean",
    "commit": "git-cz",
    "deploy": "gatsby build && gh-pages -d public -b master",
    "eslint": "eslint .",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "lint": "concurrently --raw \"npm run type-check\" \"npm run eslint\" \"npm run prettier\"",
    "lint:fix": "concurrently --raw \"npm run type-check\" \"lint-staged\"",
    "post": "node tasks/post.js",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "release": "semantic-release",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "schema:remote": "node tasks/schema.js",
    "serve": "gatsby serve",
    "start": "npm run clean && gatsby develop",
    "test": "npm run lint",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@emotion/core": "^10.0.28",
    "@reach/router": "^1.3.3",
    "apollo-boost": "^0.4.7",
    "color": "^3.1.2",
    "gatsby": "^2.19.49",
    "gatsby-image": "^2.2.45",
    "gatsby-link": "^2.2.31",
    "gatsby-plugin-create-client-paths": "^2.1.24",
    "gatsby-plugin-emotion": "^4.1.25",
    "gatsby-plugin-feed": "^2.3.29",
    "gatsby-plugin-google-analytics": "^2.1.38",
    "gatsby-plugin-manifest": "^2.2.48",
    "gatsby-plugin-offline": "^3.0.42",
    "gatsby-plugin-optimize-svgs": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.1.24",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.4.13",
    "gatsby-plugin-typescript": "^2.2.5",
    "gatsby-plugin-typography": "^2.3.25",
    "gatsby-react-router-scroll": "^2.1.25",
    "gatsby-remark-copy-linked-files": "^2.1.40",
    "gatsby-remark-images": "^3.1.50",
    "gatsby-remark-prismjs": "^3.3.36",
    "gatsby-remark-responsive-iframe": "^2.2.34",
    "gatsby-remark-smartypants": "^2.1.23",
    "gatsby-source-filesystem": "^2.1.57",
    "gatsby-source-graphql": "^2.1.35",
    "gatsby-transformer-remark": "^2.6.59",
    "gatsby-transformer-sharp": "^2.3.19",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "intersection-observer": "^0.7.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "prismjs": "^1.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-typography": "^0.16.19",
    "typescript": "^3.8.3",
    "typography": "^0.16.19",
    "typography-breakpoint-constants": "^0.16.19",
    "unified": "^8.4.2",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "^8.1.0",
    "@graphql-codegen/cli": "^1.13.1",
    "@graphql-codegen/typescript": "^1.13.1",
    "@semantic-release/git": "^9.0.0",
    "@types/color": "^3.0.0",
    "@types/lodash": "^4.14.149",
    "@types/react-helmet": "^5.0.8",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^0.2.36",
    "commitizen": "^4.0.3",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.19.0",
    "graphql-cli": "^4.0.1-beta.2",
    "husky": "^4.0.6",
    "lint-staged": "^10.0.1",
    "mkdirp": "^1.0.0",
    "prettier": "^1.18.2",
    "semantic-release": "^17.0.0",
    "shelljs": "^0.8.3"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack-website/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack-website#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack-website.git"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "env FORCE_COLOR=1 npm run lint:fix"
    }
  },
  "release": {
    "branches": [
      "develop"
    ],
    "ci": false,
    "npmPublish": false,
    "pre-commit": "npm run lint:fix",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "prettier --write",
      "eslint --fix ."
    ]
  }
}
