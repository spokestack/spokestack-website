{
  "name": "spokestack-website",
  "private": true,
  "description": "Voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "1.24.0",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "npm run clean && gatsby build",
    "clean": "gatsby clean",
    "commit": "git-cz",
    "deploy": "gatsby build && gh-pages -d public -b master",
    "format": "eslint . --fix && prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.md\"",
    "graphiql": "serve -l 5000 graphiql/",
    "lint": "concurrently --raw \"eslint .\" \"prettier --check '**/*.md' '**/*.json'\"",
    "post": "node tasks/post.js",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "release": "semantic-release",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "schema:remote": "node tasks/schema.js",
    "serve": "serve -l 8000 public/",
    "start": "npm run clean && concurrently \"gatsby develop -o\" \"npm run graphiql\"",
    "test": "concurrently --raw \"npm run lint\" \"npm run typescript\"",
    "typescript": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/core": "^10.0.35",
    "@loadable/component": "^5.13.1",
    "@reach/router": "^1.3.4",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-http-common": "^0.2.16",
    "color": "^3.1.2",
    "gatsby": "^2.24.47",
    "gatsby-image": "^2.4.16",
    "gatsby-link": "^2.4.13",
    "gatsby-plugin-canonical-urls": "^2.3.10",
    "gatsby-plugin-create-client-paths": "^2.3.10",
    "gatsby-plugin-emotion": "^4.3.10",
    "gatsby-plugin-feed": "^2.5.11",
    "gatsby-plugin-google-analytics": "^2.3.13",
    "gatsby-plugin-manifest": "^2.4.23",
    "gatsby-plugin-offline": "^3.2.23",
    "gatsby-plugin-optimize-svgs": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^2.6.27",
    "gatsby-plugin-sitemap": "^2.4.11",
    "gatsby-plugin-twitter": "^2.3.10",
    "gatsby-plugin-typescript": "^2.4.18",
    "gatsby-plugin-typography": "^2.5.10",
    "gatsby-react-router-scroll": "^3.0.12",
    "gatsby-remark-autolink-headers": "^2.3.11",
    "gatsby-remark-copy-linked-files": "^2.3.12",
    "gatsby-remark-embedder": "^3.0.0",
    "gatsby-remark-images": "^3.3.25",
    "gatsby-remark-prismjs": "^3.5.10",
    "gatsby-remark-responsive-iframe": "^2.4.12",
    "gatsby-remark-smartypants": "^2.3.10",
    "gatsby-source-filesystem": "^2.3.24",
    "gatsby-source-graphql": "^2.7.1",
    "gatsby-transformer-remark": "^2.8.28",
    "gatsby-transformer-sharp": "^2.5.13",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.11.0",
    "intersection-observer": "^0.11.0",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.20",
    "prismjs": "^1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-typography": "^0.16.19",
    "spokestack": "^0.3.0",
    "title-case": "^3.0.2",
    "typescript": "^3.9.7",
    "typography": "^0.16.19",
    "typography-breakpoint-constants": "^0.16.19",
    "uuid": "^8.3.0",
    "wav-encoder": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt": "^9.1.2",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.8",
    "@graphql-inspector/cli": "^2.2.0",
    "@semantic-release/git": "^9.0.0",
    "@types/color": "^3.0.0",
    "@types/loadable__component": "^5.13.0",
    "@types/lodash": "^4.14.159",
    "@types/node-fetch": "^2.5.7",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^8.3.0",
    "@types/wav-encoder": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-plugin-graphql-tag": "^3.0.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^0.5.5",
    "commitizen": "^4.0.5",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "gatsby-plugin-remove-trailing-slashes": "^2.3.11",
    "husky": "^4.2.5",
    "mkdirp": "^1.0.4",
    "open": "^7.2.0",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "serve": "^11.3.2",
    "shelljs": "^0.8.4"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack-website/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack-website#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack-website.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "concurrently --raw \"npm run lint\" \"npm run typescript\""
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "ga": "readonly"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    ".cache/",
    "public/",
    "src/utils/graphql.d.ts",
    "types/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "develop"
    ],
    "ci": false,
    "npmPublish": false,
    "pre-commit": "npm run lint:fix",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  }
}
