{
  "name": "spokestack.io",
  "private": true,
  "description": "Voice development platform that enables customized voice navigation for mobile and browser applications",
  "version": "1.35.1",
  "author": "Timmy Willison <4timmywil@gmail.com>",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "deploy": "gatsby-plugin-s3 deploy --yes",
    "format": "eslint . --fix && prettier --write \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.md\"",
    "graphiql": "serve -l 5000 graphiql/",
    "lint": "concurrently --raw \"eslint .\" \"npm run prettier\"",
    "post": "node tasks/post.js",
    "prettier": "prettier --check \"**/*.json\" \"**/*.md\"",
    "release": "release-it",
    "schema": "graphql-codegen --config codegen.yml && prettier --write \"**/graphql.d.ts\"",
    "schema:remote": "node tasks/schema.js",
    "serve": "serve -l 8000 public/",
    "start": "concurrently \"cross-env SITE_URL=http://localhost:8000 gatsby develop\" \"npm run graphiql\"",
    "test": "concurrently --raw \"npm run lint\" \"npm run typescript\"",
    "typescript": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/core": "^10.1.1",
    "@loadable/component": "^5.14.1",
    "@reach/router": "^1.3.4",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-link-http-common": "^0.2.16",
    "color": "^3.1.3",
    "gatsby": "^2.25.3",
    "gatsby-image": "^2.4.21",
    "gatsby-link": "^2.4.16",
    "gatsby-plugin-canonical-urls": "^2.3.13",
    "gatsby-plugin-create-client-paths": "^2.3.13",
    "gatsby-plugin-emotion": "^4.3.15",
    "gatsby-plugin-feed": "^2.6.0",
    "gatsby-plugin-google-analytics": "^2.4.1",
    "gatsby-plugin-manifest": "^2.5.2",
    "gatsby-plugin-offline": "^3.3.3",
    "gatsby-plugin-optimize-svgs": "^1.0.3",
    "gatsby-plugin-react-helmet": "^3.3.14",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-s3": "^0.3.8",
    "gatsby-plugin-sharp": "^2.7.1",
    "gatsby-plugin-sitemap": "^2.5.1",
    "gatsby-plugin-twitter": "^2.3.12",
    "gatsby-plugin-typescript": "^2.5.0",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-react-router-scroll": "^3.0.15",
    "gatsby-remark-autolink-headers": "^2.4.1",
    "gatsby-remark-copy-linked-files": "^2.3.19",
    "gatsby-remark-embed-video": "^3.0.10",
    "gatsby-remark-embedder": "^4.1.0",
    "gatsby-remark-find-replace": "^0.3.0",
    "gatsby-remark-images": "^3.4.2",
    "gatsby-remark-prismjs": "^3.6.0",
    "gatsby-remark-responsive-iframe": "^2.4.17",
    "gatsby-remark-smartypants": "^2.3.13",
    "gatsby-source-filesystem": "^2.4.2",
    "gatsby-source-graphql": "^2.7.7",
    "gatsby-transformer-remark": "^2.9.2",
    "gatsby-transformer-sharp": "^2.5.21",
    "graphql": "^14.7.0",
    "graphql-tag": "^2.11.0",
    "intersection-observer": "^0.11.0",
    "isomorphic-unfetch": "^3.1.0",
    "lodash": "^4.17.20",
    "prismjs": "^1.22.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "spokestack": "^0.3.0",
    "title-case": "^3.0.2",
    "typescript": "^4.0.5",
    "uuid": "^8.3.1",
    "wav-encoder": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@graphql-codegen/cli": "^1.19.1",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-inspector/cli": "^2.3.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/codemirror": "0.0.99",
    "@types/color": "^3.0.0",
    "@types/loadable__component": "^5.13.1",
    "@types/lodash": "^4.14.165",
    "@types/node-fetch": "^2.5.7",
    "@types/react-dom": "^16.9.9",
    "@types/react-helmet": "^6.1.0",
    "@types/typography": "^0.16.2",
    "@types/uuid": "^8.3.0",
    "@types/wav-encoder": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-plugin-graphql-tag": "^3.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-gatsby": "^0.5.16",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "gatsby-plugin-remove-trailing-slashes": "^2.3.13",
    "husky": "^4.3.0",
    "mkdirp": "^1.0.4",
    "open": "^7.3.0",
    "prettier": "^2.1.2",
    "release-it": "^14.2.1",
    "serve": "^11.3.2",
    "shelljs": "^0.8.4"
  },
  "bugs": {
    "url": "https://github.com/spokestack/spokestack.io/issues"
  },
  "homepage": "https://github.com/spokestack/spokestack.io#readme",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/spokestack/spokestack.io.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "concurrently --raw \"npm run lint\" \"npm run typescript\""
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "ga": "readonly"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    ".cache/",
    "public/",
    "src/utils/graphql.d.ts",
    "types/"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "verbose": 2,
    "hooks": {
      "before:init": "npm test"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "requireBranch": "develop",
      "tagName": "${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "tokenRef": "SPOKESTACK_GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
